<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordClock" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WordClock.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.WordClock.AppWidgetContainer" parent="Theme.WordClock.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

    <style name="redSliderColour">
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="android:progressTint">@android:color/holo_red_light</item>
    </style>

    <style name="greenSliderColour">
        <item name="colorAccent">@android:color/holo_green_light</item>
        <item name="android:progressTint">@android:color/holo_green_light</item>
    </style>

    <style name="blueSliderColour">
        <item name="colorAccent">@android:color/holo_blue_light</item>
        <item name="android:progressTint">@android:color/holo_blue_light</item>
    </style>

    <style name="greySliderColour">
        <item name="colorAccent">@android:color/darker_gray</item>
    </style>

</resources>